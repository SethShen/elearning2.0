<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="找回密码"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/phone_num"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/regist_text"
        android:hint="手机号"
        android:textColorHint="@color/lightgray"
        android:textSize="21dp"
        android:paddingTop="2dp"
        android:paddingLeft="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignRight="@id/phone_num"
        android:layout_alignTop="@id/phone_num"
        android:layout_marginRight="90dp"
        android:text="|"
        android:layout_marginTop="4dp"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/set_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="发送验证码"
        android:layout_alignRight="@id/phone_num"
        android:layout_alignTop="@id/phone_num"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"

        />

    <EditText
        android:id="@+id/check_num"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/phone_num"
        android:background="@drawable/regist_text"
        android:hint="请输入验证码"
        android:textColorHint="@color/lightgray"
        android:textSize="21dp"
        android:paddingTop="2dp"
        android:paddingLeft="20dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/find_pass_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:text="确认"
        android:textColor="@color/white"
        android:layout_below="@id/check_num"
        android:background="@drawable/regist_btn1"
        android:enabled="false"
        />

</RelativeLayout>